<h1><%= @post.new_record? ? 'Create' : 'Edit' %>  Blog</h1>
<div class="row">
    <div class="col-md-8">
        <%= form_for [:admin, @post]  do |f| %>
        <div class="form-group">
            <ul class="list-unstyled">
                <% @post.errors.messages.values.flatten.each do |error| %>
                  <li>
                    <i class="fa fa-exclamation-circle"></i>
                    <%= error %>
                  </li>
                <% end -%>
            </ul>
        </div>

        <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: "标题" %>
        </div>

         <ul class="nav nav-tabs" id="myTab">
                <li class='active'>
                    <a id='content_tab' >content</a>
                </li>
                <li>
                    <a id='preview_tab'>preview</a>
                </li>
          </ul>

          <div class="tab-content">
                <div id="content-field" class="tab-pane active">
                    <p>
                        <%= f.text_area :content, class: "form-control", rows: "15", placeholder: "内容" %>
                    </p>
               </div>
              <div id="preview-field" class="tab-pane">123</div>
         </div>

        <div class="form-group">
          <input type="text" name="tags" value="<%= @post.tags.map(&:title).join(',') %>"> <small>tags 以逗号隔开</small>
        </div>

        <%= f.submit "保存", class: "btn btn-primary" %>
        <% end -%>
  </div>

</div>
