<table class="table table-hover">
  <tr>
    <th>标题</th>
    <th>概要</th>
    <th>操作</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%=  link_to post.title, blog_path(post), target: '_blank' %></td>

      <td><%= format_date(post.created_at) %></td>
      <td>
        <%= link_to "edit", edit_admin_post_path(post) %>
      </td>
      <td>
        <%= link_to "show", blog_path(post), target: '_blank'%>
      </td>
    </tr>
  <% end -%>
</table>

<%= paginate @posts %>
