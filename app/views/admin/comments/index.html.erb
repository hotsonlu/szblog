<div class="row">
    <div class="col-lg-12">
        <h3>Comment Management</h3>
        <h4>Post title: <%= link_to @post.title, blog_path(@post), target: "_blank" %></h4>
        <table class="table table-hover">
            <tr>
                <th>name</th>
                <th>email</th>
                <th>content</th>
                <th>date</th>
                <th>operation</th>
            </tr>
            <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.name %></td>
                <td><%= comment.email %></td>
                <td><%= simple_format(comment.content) %></td>
                <td><%= format_time(comment.created_at) %></td>
                <td>
                    <%= link_to 'Reply', blog_path(@post),target: '_blank' %>
                </td>
                <td>
                    <%= link_to 'Delete', admin_post_comment_path(@post, comment), method: 'Delete', 'data-confirm'=> 'Are you sure to delete?' %>
                </td>
            </tr>
            <% end -%>
        </table>
    </div>
</div>
